{
  "name": "nimbella-cli",
  "version": "0.1.8",
  "description": "A comprehensive CLI for the Nimbella stack",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com//nimbella-corp/nimbella-cli.git"
  },
  "bin": {
    "nim": "./bin/run"
  },
  "keywords": [],
  "author": "Joshua Auerbach",
  "license": "SEE LICENSE IN 'LICENSE' or 'license.html'",
  "dependencies": {
    "@adobe/aio-cli-plugin-runtime": "https://nimaio-apigcp.nimbella.io/adobe-aio-cli-plugin-runtime-3ca9ca96e1a360a37b12d03cc7bbe244dfd0558e.tgz",
    "@google-cloud/storage": "^3.2.1",
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-autocomplete": "^0.1.4",
    "@oclif/plugin-help": "^2.1.4",
    "@oclif/plugin-not-found": "^1.2.0",
    "@oclif/plugin-update": "^1.3.9",
    "@types/archiver": "^3.0.0",
    "@types/debug": "^4.1.5",
    "@types/js-yaml": "^3.12.1",
    "@types/mime-types": "2.1.0",
    "@types/node": "11.13.4",
    "@types/randomstring": "^1.1.6",
    "@types/swagger-schema-official": "2.0.15",
    "@types/url-parse": "1.4.3",
    "archiver": "^3.0.0",
    "debug": "^4.1.1",
    "dotenv": "7.0.0",
    "expand-home-dir": "0.0.3",
    "gtoken": "4.1.0",
    "ignore": "5.0.6",
    "js-yaml": "^3.13.1",
    "mime-types": "2.1.22",
    "node-dir": "0.1.17",
    "open": "^6.3.0",
    "openwhisk": "3.18.0",
    "properties-parser": "0.3.1",
    "randomstring": "^1.1.5",
    "simple-git": "^1.113.0",
    "touch": "^3.1.0",
    "tslib": "^1",
    "url-parse": "1.4.4",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "globby": "^10",
    "minify": "^4.1.3",
    "ts-node": "^8",
    "typescript": "^3.4.3"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/oclif.manifest.json",
    "/nim.html",
    "/LICENSE",
    "/license.html",
    "/package.json",
    "/version.json",
    "/runtimes.json",
    "/sensitiveNamespaces.json",
    "/productionProjects.json",
    "/404.html"
  ],
  "oclif": {
    "commands": "./lib/commands",
    "bin": "nim",
    "hooks": {
      "prerun": "./lib/hooks/prerun"
    },
    "plugins": [
      "@oclif/plugin-autocomplete",
      "@oclif/plugin-help",
      "@oclif/plugin-not-found",
      "@oclif/plugin-update"
    ],
    "macos": {
      "identifier": "com.nimbella.cli"
    },
    "update": {
      "s3": {
        "host": "https://apigcp.nimbella.io/downloads/nim"
      }
    },
    "topics": {
      "auth": {
        "description": "manage Nimbella namespace credentials"
      },
      "project": {
        "description": "manage and deploy Nimbella projects"
      },
      "action": {
        "description": "work with actions"
      },
      "activation": {
        "description": "work with activations"
      },
      "namespace": {
        "description": "work with namespaces"
      },
      "package": {
        "description": "work with packages"
      },
      "route": {
        "description": "work with routes"
      },
      "rule": {
        "description": "work with rules"
      },
      "trigger": {
        "description": "work with triggers"
      }
    }
  },
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "rm -rf lib && tsc -b && npm run minify && oclif-dev manifest && oclif-dev readme",
    "test": "echo NO TESTS",
    "version": "oclif-dev readme && git add README.md",
    "minify": "for i in `find lib -type f -name \\*.js`; do npx minify $i > minified; mv minified $i; done"
  },
  "types": "lib/index.d.ts"
}
