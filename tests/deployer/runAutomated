# This runs those tests that are self-verifying.  
# Currently a single cmdline argument is passed to testMainActions only.  This is undoubtedly temporary

SELFDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
MAINDIR=$SELFDIR/../../../main
cd $SELFDIR

echo "A failure here is expected sometimes and always harmless:"
nim auth logout dtestnim-5skkrmhfzyo
set -e

function runTest() {
    echo "------------------------"
    echo "Starting test$1"
    ./test$1 $2
    echo "test$1 succeeded"
}

# If no argument or the --postdeploy argument is given, use the namespace 'test' on the current project, whatever it might be.
# If the --ongcp argument is given, use the alternate test project wbtest@nimbella.com as defined in the local credential store on nimgcp
# Use of that argument implies that you have this in your credential store.
# The --postdeploy flag is passed to the main tests regardless.  To run them otherwise, run them individually.

if [ "$1" == "--ongcp" ]; then
	 nim auth switch wbtestni-grinjpsjnuh --apihost https://apigcp.nimbella.io
else
   pushd $MAINDIR
   bin/nimadmin user set demos test
	 popd
fi

for i in MultiSubstitute SplitParams IncludeExclude WebCache SharedBuild Filtering WebInclude Ignoring EmptyReduce Incremental Environment Errors Unweb ValidateRuntime ConfigTypes LoginAuth EmptyZip; do
   runTest $i
done
if [ "$1" == "--ongcp" ]; then
	 echo "Running on 'nimgcp' so skipping actions and demos tests"
	 exit 0
fi
runTest Demos --postdeploy
echo "------------------------"
echo "Starting testMainActions"
$MAINDIR/tests/actions/testMainActions --postdeploy
echo "testMainActions succeeded"
