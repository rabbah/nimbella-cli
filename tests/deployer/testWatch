# Minimal regression test for 'nim project watch'

SELFDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd $SELFDIR
set -e
rm -fr watched watcher.output

# Make the project
nim project create watched

# Spawn a watcher process, saving its output
nim project watch watched > watcher.output &
PID=$!

# Wait for watcher to initialize
sleep 5

# Touch a file to trigger a build
touch watched/packages/default/hello.js

# Sleep a while to give output a chance to occur
sleep 5

# Kill the watcher
kill $PID

# Check the result
TOCHECK=$(cat watcher.output)
if [[ "$TOCHECK" != *"Deploying 'watched' due to change"* ]]; then
	 echo "It does not appear that the watcher fired. Output:"
   echo "$TOCHECK"
   exit 1
fi

echo "Test succeeded"
