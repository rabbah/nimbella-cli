# This tests the feature that supports selective deployment (--include and --exclude)

SELFDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd $SELFDIR
REPOBASE=$SELFDIR/../../..

set -e
rm -fr printer
cp -r $REPOBASE/demo-projects/printer .
echo "FOO=bar" > printer/.slack-env

# Deploy just the web content and no packages
nim namespace clean --force
RESULT=$(nim project deploy printer --include web)
echo $RESULT

echo "Test succeeded"
